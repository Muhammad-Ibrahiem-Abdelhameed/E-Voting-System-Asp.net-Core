@model EVotingSystem.Models.Vote

@{
    ViewData["Title"] = "Voting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="votecontainer">
    
    <form asp-action="Index" class="votecat col-md-5 col-11">
        <h3 class="text-primary">Votes</h3>
        <hr>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            
            <select asp-for="Id" name="Id" class="form-control" asp-items="ViewBag.Vote"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Choose" class="btn btn-primary btn-block" />
        </div>
    </form>
   
</div>
