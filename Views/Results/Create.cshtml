@model EVotingSystem.Models.Result

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Create</h1>

<h4>Result</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" class ="form-control" asp-items="ViewBag.Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="TotalVoters" class="control-label"></label>
                <input asp-for="TotalVoters" class="form-control" />
                <span asp-validation-for="TotalVoters" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentVoted" class="control-label"></label>
                <input asp-for="CurrentVoted" class="form-control" />
                <span asp-validation-for="CurrentVoted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Winner" class="control-label"></label>
                <select asp-for="Winner" class ="form-control" asp-items="ViewBag.Winner"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

