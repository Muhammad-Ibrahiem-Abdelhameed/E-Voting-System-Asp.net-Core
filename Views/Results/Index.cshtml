@model IEnumerable<EVotingSystem.Models.Result>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Results</h1>
<p>
    <a asp-action="Create" class="btn btn-outline-primary btn-sm btn-new">Create New</a>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Vote)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalVoters)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CurrentVoted)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Candidate)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="tr-shadow">
                            <td>
                                @Html.DisplayFor(modelItem => item.Vote.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalVoters)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CurrentVoted)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Candidate.Name)
                            </td>
                            <td>
                                <div class="table-data-feature">

                                    <a class="item" asp-action="Edit" asp-route-id="@item.Id"><i class="zmdi zmdi-edit"></i></a>
                                    <a class="item" asp-action="Details" asp-route-id="@item.Id"><i class="zmdi zmdi-info"></i></a>
                                    <a class="item" asp-action="Delete" asp-route-id="@item.Id"><i class="zmdi zmdi-delete"></i></a>
                                </div>

                            </td>
                        </tr>
                        <tr class="spacer"></tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
