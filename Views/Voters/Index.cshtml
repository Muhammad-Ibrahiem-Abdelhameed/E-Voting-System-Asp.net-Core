@using EVotingSystem.Services
@model PaginatedList<EVotingSystem.Models.Voter>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Voter</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary btn-sm btn-new">Create New</a>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["FullNameSortParm"]"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                Full Name
                            </a>

                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["NationalIdSortParm"]"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                NationalID
                            </a>

                        </th>
                        <!--<th>
                            BirthDate
                        </th>-->
                        <th>
                            AllowPhone
                        </th>
                        <!--<th>
                            Fingerprint
                        </th>-->
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["StateSortParm"]"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                State
                            </a>

                        </th>
                        <th>
                            AppUser
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="tr-shadow">
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NationalId)
                            </td>
                            <!--<td>
                                @Html.DisplayFor(modelItem => item.BirthDate)
                            </td>-->
                            <td>
                                @Html.DisplayFor(modelItem => item.AllowPhone)
                            </td>
                            <!--<td>
                                @Html.DisplayFor(modelItem => item.Fingerprint)
                            </td>-->
                            <td>
                                @Html.DisplayFor(modelItem => item.State.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                            </td>
                            <td>
                                <div class="table-data-feature">

                                    <a class="item" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="zmdi zmdi-edit"></i></a>
                                    <a class="item" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="zmdi zmdi-info"></i></a>
                                    <a class="item" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="zmdi zmdi-delete"></i></a>
                                </div>

                            </td>
                        </tr>
                        <tr class="spacer"></tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>
