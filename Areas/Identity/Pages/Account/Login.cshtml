@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">
                        <h2>Login</h2>
                    </div>
                    <div class="login-form">
                        <form  class="login100-form validate-form" method="post">
                            <div asp-validation-summary="All" class="alert alert-light" role="alert"></div>

                            <div class="form-group validate-input" data-validate="Valid email is: a@b.c">
                                <label>Email Address</label>
                                <input asp-for="Input.Email" class="au-input au-input--full" type="email" id="username" placeholder="Email">
                            </div>
                            <div class="form-group validate-input"  data-validate="Enter password">
                                <label>Password</label>
                                <input asp-for="Input.Password" class="au-input au-input--full" type="password" placeholder="Password" id="password">
                            </div>
                            <div class="login-checkbox">
                                <label>
                                    <input type="checkbox" name="remember" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                                <label>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgotten Password?</a>
                                </label>
                            </div>
                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>
                            
                        </form>
                        <div class="register-link">
                            <p>
                                Don't you have account?
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up Here</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<div id="dropDownSelect1"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
